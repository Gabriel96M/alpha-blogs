
<div class="container">
<%= form_with(model: article,  local: true) do |form| %>
 <div class="row justify-content-center shadow p-3 mb-3 bg-black rounded">
  <div class="col-10">
    <%= render 'shared/errors'%>
      <div class="form-group row">
        <%= form.label :title, class:"col-2 col-form-label text-light" %>
        <div class = "col-10">
          <%= form.text_field :title, class: "form-control shadow rounded", placeholder:"Title of article" %>
        </div>
      </div>

      <div class="form-group row">
        <%= form.label :description,class:"col-2 col-form-label text-light"  %>
        <div class="col-10">
          <%= form.text_area :description, rows: 10, class: "form-control shadow rounded", placeholder:"Description of article"%>
        </div>
      </div>

      
      <div class="actions text-center">
        <%= form.submit class: "btn btn-outline-light btn-lg mb-2"%>
      </div>
    <% end %>
  </div>
  
 </div>
 <div class="form text-center mb-3">
 <%= link_to '[ Cancel and return to articles listing ]', articles_path, class: "text-black" %> 
</div>
</div>