<div class="container">
<%= form_with(model: @user,  local: true) do |form| %>
 <div class="row justify-content-center shadow p-3 mb-3 bg-black rounded">
  <div class="col-10">
    <%= render 'shared/errors', obj: @user%>
      <div class="form-group row">
        <%= form.label :username, class:"col-2 col-form-label text-light" %>
        <div class = "col-10">
          <%= form.text_field :username, class: "form-control shadow rounded", placeholder:"Enter an username" %>
        </div>
      </div>

      <div class="form-group row">
        <%= form.label :email,class:"col-2 col-form-label text-light"  %>
        <div class="col-10">
          <%= form.email_field :email, class: "form-control shadow rounded", placeholder:"Enter your email"%>
        </div>
      </div>

      <div class="form-group row">
      <%= form.label :password,class:"col-2 col-form-label text-light"  %>
      <div class="col-10">
        <%= form.password_field :password, class: "form-control shadow rounded", placeholder:"Choose a password"%>
      </div>
    </div>

      
      <div class="actions text-center">
        <%= form.submit(@user.new_record? ? "Sign up" : "Update account", class: "btn btn-outline-light btn-lg mb-2") %>
      </div>
    <% end %>
  </div>
  
 </div>
 <div class="form text-center mb-3">
 <%= link_to '[ Cancel and return to articles listing ]', articles_path, class: "text-black" %> 
</div>
</div>