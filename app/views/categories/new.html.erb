<h1 class="text-center mt-4">Create a new category</h1>
<div class="container">
<%= form_with(model: @category,  local: true) do |form| %>
 <div class="row justify-content-center shadow p-3 mb-3 bg-black rounded">
  <div class="col-10">
    <%= render 'shared/errors', obj: @category%>
      <div class="form-group row">
        <%= form.label :name, "Category Name", class:"col-2 col-form-label text-light" %>
        <div class = "col-10">
          <%= form.text_field :name, class: "form-control shadow rounded", placeholder:"Enter a name" %>
        </div>
      </div>
      
      <div class="actions text-center">
        <%= form.submit class: "btn btn-outline-light btn-lg mb-2" %>
      </div>
    <% end %>
  </div>
  
 </div>
 <div class="form text-center mb-3">
 <%= link_to '[ Cancel and return to articles listing ]', articles_path, class: "text-black" %> 
</div>
</div>